{
  "name": "glc",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "npx playwright install && playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint src/main/webapp/src/ --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format:check": "prettier --check src/main/webapp/src/",
    "format": "prettier --write src/main/webapp/src/",
    "prepare": "husky install",
    "predev": "dotenv-checker --schema .env.example --env .env.local",
    "changelog:update": "commit-and-tag-version --packageFiles pom.xml --skip.bump --skip.tag --skip.commit -t ''"
  },
  "dependencies": {
    "@vueuse/core": "^10.11.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.33",
    "vue-i18n": "9.13.1",
    "vue-router": "^4.4.0",
    "vuetify": "^3.6.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "3.0.8",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@playwright/test": "^1.45.2",
    "@rushstack/eslint-patch": "^1.10.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21",
    "@types/lodash.debounce": "^4",
    "@types/lodash.isempty": "^4",
    "@types/node": "^20",
    "@types/xml2js": "^0",
    "@vitejs/plugin-vue": "^5.1.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "axios": "^1.7.2",
    "commit-and-tag-version": "^12.4.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "dotenv-checker": "^1.1.5",
    "eslint": "^8.57.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-vue": "^9.27.0",
    "husky": "^8.0.3",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "lodash.debounce": "^4.0.8",
    "lodash.isempty": "^4.4.0",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.3",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.77.8",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-vuetify": "^2.0.3",
    "vitest": "^2.0.3",
    "vue-tsc": "^2.0.26",
    "vue3-toastify": "^0.2.2",
    "xml2js": "^0.6.2"
  },
  "packageManager": "yarn@4.3.1"
}
